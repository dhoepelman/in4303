  nabl-constraint(|ctx) :
    ArrayAssign(var, idx, exp) -> <fail>
    where tvar := <type-lookup(|ctx)> var;
          tidx := <type-task(|ctx)> idx;
          texp := <type-task(|ctx)> exp;
          eq311 := <type-match(|ctx, IntArray())> tvar;
          <task-create-error-on-failure(|ctx, eq311, "Not an array")> var;
          eq312 := <type-match(|ctx, Int())> tidx;
          <task-create-error-on-failure(|ctx, eq312, "Array index needs to be an integer")> idx;
          eq313 := <type-match(|ctx, Int())> texp;
          <task-create-error-on-failure(|ctx, eq313, "Incompatible array and expression type")> exp
  
