  create-type-task(|ctx) :
    BinExp(operator, subexp1, subexp2) -> <type-is(|ctx, [ety1, ety2, t66, ty1, ty2, ty, eq309, eq310])> ty
    where ety1 := <type-task(|ctx)> subexp1;
          ety2 := <type-task(|ctx)> subexp2;
          t66 := <type-task(|ctx)> operator;
          ty1 := <new-task(|ctx)> Rewrite("proj157", t66);
          ty2 := <new-task(|ctx)> Rewrite("proj158", t66);
          ty := <new-task(|ctx)> Rewrite("proj159", t66);
          eq309 := <type-match(|ctx, ty1)> ety1;
