  create-type-task(|ctx) :
    UnExp(operator, exp) -> <type-is(|ctx, [ety1, t0, ty1, ty, eq0])> ty
    where ety1 := <type-task(|ctx)> exp;
          t0 := <type-task(|ctx)> operator;
          ty1 := <new-task(|ctx)> Rewrite("proj3", t0);
          ty := <new-task(|ctx)> Rewrite("proj4", t0);
          eq0 := <type-match(|ctx, ty1)> ety1;
          <task-create-error-on-failure(|ctx, eq0, "Incompatible type")> exp
  
  create-type-task(|ctx) :
    Negation() -> <type-is(|ctx, [])> (Bool(), Bool())
