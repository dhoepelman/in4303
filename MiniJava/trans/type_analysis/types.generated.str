  create-type-task(|ctx) :
    UnExp(operator, exp) -> <type-is(|ctx, [ety1, t65, ty1, ty, eq308])> ty
    where ety1 := <type-task(|ctx)> exp;
          t65 := <type-task(|ctx)> operator;
          ty1 := <new-task(|ctx)> Rewrite("proj160", t65);
          ty := <new-task(|ctx)> Rewrite("proj161", t65);
          eq308 := <type-match(|ctx, ty1)> ety1;
          <task-create-error-on-failure(|ctx, eq308, "Incompatible type")> exp
  
