          texp := <type-task(|ctx)> exp;
          eq314 := <type-match(|ctx, t)> texp;
          <task-create-error-on-failure(|ctx, eq314, "Incompatible variable and expression type")> exp
  
  nabl-constraint(|ctx) :
    Print(exp) -> <fail>
    where texp := <type-task(|ctx)> exp;
          eq315 := <type-match(|ctx, Int())> texp;
          <task-create-error-on-failure(|ctx, eq315, "Incompatible expression type: can only print integers")> exp
  
  nabl-constraint(|ctx) :
    While(exp, statements) -> <fail>
    where texp := <type-task(|ctx)> exp;
          eq316 := <type-match(|ctx, Bool())> texp;
          <task-create-error-on-failure(|ctx, eq316, "Incompatible expression type: condition must be boolean")> exp
  
  nabl-constraint(|ctx) :
    If(exp, ifstmt, elsestmt) -> <fail>
    where texp := <type-task(|ctx)> exp;
          eq317 := <type-match(|ctx, Bool())> texp;
          <task-create-error-on-failure(|ctx, eq317, "Incompatible expression type: condition must be boolean")> exp
  
  nabl-constraint(|ctx) :
    Method(treturn, mname, params, vars, statements, retexp) -> <fail>
    where tretexp := <type-task(|ctx)> retexp;
          eq318 := <type-match(|ctx, treturn)> tretexp;
          <task-create-error-on-failure(|ctx, eq318, "Incompatible return and expression type")> retexp
  
  
