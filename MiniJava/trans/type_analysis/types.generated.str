  nabl-constraint(|ctx) :
    ArrayAssign(var, idx, exp) -> <fail>
    where tvar := <type-lookup(|ctx)> var;
          tidx := <type-task(|ctx)> idx;
          texp := <type-task(|ctx)> exp;
          eq3 := <type-match(|ctx, IntArray())> tvar;
          <task-create-error-on-failure(|ctx, eq3, "Not an array")> var;
          eq4 := <type-match(|ctx, Int())> tidx;
          <task-create-error-on-failure(|ctx, eq4, "Array index needs to be an integer")> idx;
          eq5 := <type-match(|ctx, Int())> texp;
          <task-create-error-on-failure(|ctx, eq5, "Incompatible array and expression type")> exp
  
  nabl-constraint(|ctx) :
    Assign(var, exp) -> <fail>
    where t := <type-lookup(|ctx)> var;
          texp := <type-task(|ctx)> exp;
          eq6 := <type-match(|ctx, t)> texp;
          <task-create-error-on-failure(|ctx, eq6, "Incompatible variable and expression type")> exp
  
  nabl-constraint(|ctx) :
    Print(exp) -> <fail>
    where texp := <type-task(|ctx)> exp;
          eq7 := <type-match(|ctx, Int())> texp;
          <task-create-error-on-failure(|ctx, eq7, "Incompatible expression: can only print integers")> exp
  
  nabl-constraint(|ctx) :
    Method(treturn, mname, params, vars, statements, retexp) -> <fail>
    where tretexp := <type-task(|ctx)> retexp;
          eq8 := <type-match(|ctx, treturn)> tretexp;
          <task-create-error-on-failure(|ctx, eq8, "Incompatible return and expression type")> retexp
  
  
